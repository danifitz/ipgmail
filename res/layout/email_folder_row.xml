<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/from_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="dan@dan.com"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/body_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subject"
        android:layout_alignRight="@+id/subject"
        android:layout_below="@+id/subject"
        android:text="Hi Dan, you  have an appointment..."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/from_address"
        android:layout_alignRight="@+id/from_address"
        android:layout_below="@+id/from_address"
        android:text="your appointment"
        android:textSize="14sp" />

</RelativeLayout>